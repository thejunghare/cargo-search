{
  "name": "cargo",
  "productName": "Cargo",
  "version": "0.0.1",
  "description": "A browser with a really thin ui",
  "license": "MIT",
  "repository": "herber/cargo",
  "main": "./src/index.js",
  "author": {
    "name": "Tobias Herber",
    "email": "tobihrbr@gmail.com",
    "url": "http://tobihrbr.com"
  },
  "scripts": {
    "test": "formatted",
    "bundle": "esbuild src/view.js --bundle --outfile=src/view.bundle.js --format=iife --platform=browser",
    "start": "npm run bundle && electron .",
    "build": "npm run bundle && electron-builder .",
    "build:win32": "npm run bundle && npm run build -- --win",
    "build:mac": "npm run bundle && npm run build -- --mac",
    "build:all": "npm run bundle && npm run build -- --all"
  },
  "keywords": [
    "electron-app",
    "electron",
    "browser",
    "cargo"
  ],
  "dependencies": {
    "@cargohq/keyval": "^1.1.0",
    "@electron/remote": "^2.1.3",
    "dexie": "^4.2.1",
    "electron": "^39.2.7",
    "electron-debug": "3.2.0",
    "electron-is-dev": "2.0.0",
    "electron-store": "^11.0.2",
    "electron-titlebar": "^0.0.3",
    "idb-keyval": "^6.2.2",
    "mitt": "^3.0.1",
    "mousetrap": "^1.6.5",
    "normalize-url": "^8.1.0",
    "nprogress": "^0.2.0",
    "tldjs": "^2.3.2",
    "vkey": "^1.0.1",
    "vxv": "^3.1.6",
    "xou": "^2.0.2"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "esbuild": "^0.27.3",
    "formatted": "^1.0.0",
    "url": "^0.11.4",
    "util": "^0.12.5"
  },
  "build": {
    "appId": "com.cargo",
    "productName": "cargo",
    "asar": true,
    "npmRebuild": false,
    "directories": {
      "output": "./dist"
    },
    "files": [
      "**/*",
      "src",
      "!keys",
      "!test",
      "!*.pug",
      "!src/node_modules/test",
      "!release",
      "!.DS_Store",
      "!webpack.config.js",
      "!cmake-js",
      "!pkg",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,test,__tests__,tests,powered-test,example,examples,*.d.ts}",
      "!**/*.{o,hprof,orig,pyc,pyo,rbc}",
      "!**/node_modules/.bin",
      "!**/{.DS_Store,.git,.gitignore}"
    ],
    "win": {
      "icon": "./src/static/icon.ico"
    },
    "mac": {
      "icon": "./src/static/icon.icns"
    }
  }
}
